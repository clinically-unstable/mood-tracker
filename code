#include <iostream>
#include <string>
#include <cstdlib>
#include <ctime>

using namespace std;

int main() {
    srand(time(0)); // rng found online with a cool little tutorial

    int mood;
    cout << "You aint choosing an emotion, go roll for one. (Use a number 1-6.)\n";
    cin >> mood;

    switch (mood) {
        case 1:
            cout << "I feel like I'm gonna combust soon\n";
            break;
        case 2:
            cout << "I'm kinda happy I guess\n";
            break;
        case 3:
            cout << "I feel like Adam\n";
            break;
        case 4:
            cout << "depressed.\n";
            break;
        case 5:
            cout << "it's okay.\n";
            break;
        case 6:
            cout << "i yearn for C++\n";
            break;
        // extra is here, i used random
        case 7: {
            cout << "1v1 me in blackjack\nType 'ok' if you want to play: ";
            string option;
            cin >> option;
            if (option == "ok") {
             
                int cards1 = rand() % 11 + 1;
                int cards2 = rand() % 11 + 1;
                int total2 = cards1 + cards2;
                cout << "i draw: " << cards1 << " and " << cards2 << " (Total: " << total2 << ")\n";

             
                int card1 = rand() % 11 + 1;
                int card2 = rand() % 11 + 1;
                int total = card1 + card2;
                cout << "you drew: " << card1 << " and " << card2 << " (Total: " << total << ")\n";

                string option2;
                cout << "would you like to hit or stay? ";
                cin >> option2;

                if (option2 == "hit") {
                    int card3 = rand() % 11 + 1;
                    total += card3;
                    cout << "you drew: " << card3 << ". you have uhh " << total << endl;
                }

              
                if (total2 < 17) {
                    int cards3 = rand() % 11 + 1;
                    total2 += cards3;
                    cout << "i hit and draw: " << cards3 << ". i have umm " << total2 << endl;
                }

                
                if (total > 21) {
                    cout << "damn you suck.\n";
                } else if (total2 > 21) {
                    cout << "damn i suck, this is all your fault\n";
                } else if (total > total2) {
                    cout << "you win, how this was rigged.\n";
                } else if (total < total2) {
                    cout << "you lost lol\n";
                } else {
                    cout << "erg\n";
                }
            } else {
                cout << "whats wrong with you\n";
            }
            break;
        } 
        default: 
            cout << "That's not an option pal, we're leaking your home address";
            break;
    }

    return 0;
}
